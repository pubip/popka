<Page x:Class="Uslygi.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Uslygi.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Авторизация" FontSize="30" Margin="5"></TextBlock>
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical" >
                    <TextBlock Text="логин" Margin="5" FontSize="15"></TextBlock>
                    <TextBlock Text="пароль" Margin="5" FontSize="15"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBox x:Name="LoginBox" Width="100" Margin="5" TextChanged="LoginBox_TextChanged">BobTop</TextBox>
                    <PasswordBox x:Name="PasswordBox" Width="100" Margin="5" Password="12345"></PasswordBox>
                </StackPanel>
            </StackPanel>
            <Button x:Name="EnterButton" Click="EnterButton_Click" Margin="5">вход</Button>
        </StackPanel>
    </Grid>
</Page>
